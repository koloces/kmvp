<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvpBase.example.UtilsMainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="@dimen/widget_size_150"
        android:layout_height="@dimen/widget_size_50"
        android:layout_marginTop="@dimen/widget_size_50"
        android:background="@color/picture_color_blue"
        android:gravity="center"
        android:text="网络测试"
        android:textColor="@color/white"
        android:textSize="@dimen/widget_size_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:layout_width="@dimen/widget_size_150"
            android:layout_height="@dimen/widget_size_50"
            android:layout_marginTop="@dimen/widget_size_10"
            app:qmui_backgroundColor="@color/picture_color_blue"
            app:qmui_borderWidth="0dp"
            app:qmui_radius="@dimen/widget_size_5" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>